@model WoWArmory.Models.InputModels.CreateHeroInputModel

@{
    ViewData["Title"] = "HeroCreation";
}
<h1>HeroCreation</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Hero" asp-action="Faction" method="POST">
            <div class="form-group">


                <div class="form-group" >
                    <input type="text" name="HeroName" value=""  asp-for="HeroName"/>
                </div>

                <select class="form-group" asp-for="HeroFaction">
                    @foreach (var item in Enum.GetValues(typeof(WoWArmory.Data.Models.Enum.Faction)))
                    {
                        <option>@item</option>
                    }
                </select>
                <br />
                <select class="form-group" asp-for="HeroRace">

                    @foreach (var item in Enum.GetValues(typeof(WoWArmory.Data.Models.Enum.Race)))
                    {
                        <option>@item</option>
                    }

                </select>
                <br />
                <select class="form-group" asp-for="HeroClass">

                    @foreach (var item in Enum.GetValues(typeof(WoWArmory.Data.Models.Enum.Classes.Class)))
                    {
                        <option>@item</option>
                    }

                </select>
                <br>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Hero</button>
            </div>


        </form>
    </div>
</div>