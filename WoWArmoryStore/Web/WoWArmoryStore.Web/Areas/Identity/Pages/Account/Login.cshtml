@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
    <body style="background-color:gray">
    </body>

<div class="row">

    <div class="col-md-4 col-lg-4 col-xl-4" style="padding-right:0">
        <img src="https://i.imgur.com/xadrD8b.png" width="100%" height="100%" alt="..." />
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4 centered" style="padding:0">
    
        <section >
            @*dqsno -- https://i.imgur.com/xadrD8b.png
                drugoto dqsno = https://i.imgur.com/cGEdnkk.png*@
            <form style="padding: 0; height:700px;background-image:url('https://www.pinclipart.com/picdir/big/74-741299_albigensian-crusade-background-clipart-world-of-warcraft-blank.png'); background-size:645px 700px" id="account" method="post">
                <div style="padding: 100px 0 0 0">
                    <h1 class="centered">@ViewData["Title"]</h1>
                    <h4>Use a local account to log in.</h4>
                    
                    <div asp-validation-summary="All" class="text-danger centered"></div>
                    <div class="form-group">
                        <label asp-for="Input.Username"></label>
                        <input asp-for="Input.Username" class="form-control col-md-6 mx-auto centered" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control  col-md-6 mx-auto centered" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </div>
            </form>

        </section>
    </div>
    <div class="col-md-4 col-lg-4 col-xl-4" style="padding-left:0">
        <img src="https://i.imgur.com/cGEdnkk.png" width="100%" height="100%" alt="..." />
    </div>
</div>
